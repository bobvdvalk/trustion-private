{
  "private": true,
  "workspaces": {
    "packages": [
      "directus-extension-trustion",
      "models"
    ]
  },
  "scripts": {
    "dev": "npm-run-all -s build:extension start:docker load -p dev:**",
    "load": "npm-run-all -s load:bootstrap load:schema",
    "load:bootstrap": "directus bootstrap",
    "load:schema": "directus schema apply -y ./schema.yaml",
    "dev:directus": "directus start",
    "dev:extension": "yarn workspace directus-extension-trustion dev",
    "dev:models": "yarn workspace models dev",
    "start:docker": "docker compose up -d",
    "start:directus": "directus start",
    "build:extension": "yarn workspace directus-extension-trustion build",
    "dump": "npm-run-all -p dump:**",
    "dump:schema": "directus schema snapshot -y ./schema.yaml",
    "dump:models": "directus models snapshot models/src/index.ts"
  },
  "dependencies": {
    "directus-extension-models": "^2.1.0",
    "directus-extension-trustion": "*"
  },
  "devDependencies": {
    "directus": "^10.5.2",
    "npm-run-all": "^4.1.5"
  }
}
